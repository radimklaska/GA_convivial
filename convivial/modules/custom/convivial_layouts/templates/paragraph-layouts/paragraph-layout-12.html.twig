{%
  set classes = [
    'paragraph-layout',
    'paragraph-layout--12',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.region1 %}
      <div {{ region_attributes.region1.addClass('paragraph-layout__region', 'paragraph-layout__region--first') }}>
        {{ content.region1 }}
      </div>
    {% endif %}
  </div>
{% endif %}
